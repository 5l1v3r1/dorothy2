require 'rubygems'
require 'trollop'
#require 'dorothy2'

load '../lib/dorothy2.rb'

include Dorothy

conf = "#{File.expand_path("~")}/.dorothy.yml"
DoroSettings.load!(conf)

#Logging

LOGGER = DoroLogger.new(DoroSettings.env[:logfile], DoroSettings.env[:logage])
LOGGER.sev_threshold = DoroSettings.env[:loglevel]


Dorothy.stop


